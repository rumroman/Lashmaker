<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">



    <var name="customer" class="app.model.Customer"/>
    <!--Запросить список клиентов из базы и передать в представление.-->

    <on-start>
        <!--Запрашиваем всех клиентов и помещаем в переменную-->
        <evaluate expression="customerRepository.findAll()" result="flowScope.customers" />
    </on-start>

    <!--asdВыбор клиента-->
    <view-state id="customer" view="customer.html">
        <transition on="customSelected" to="id"/>
    </view-state>

    <action-state id="id">
        <evaluate expression="requestParameters.customer = customer"/>
        <transition to="customerReady"/>
    </action-state>

    <end-state id="cancel"/>

    <end-state id="customerReady">
        <output name="customer"/>
    </end-state>

    <global-transitions>
        <transition on="cancel" to="cancel"/>
    </global-transitions>

</flow>